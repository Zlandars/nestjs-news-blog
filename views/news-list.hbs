{{#if news}}
    <div class='row'>
        {{#each news}}
            <div class='col-lg-6'>
                <a href='/news/{{this.id}}'>
                    <div class='card'>
                        <img
                                src='{{this.cover}}'
                                class='card-img-top'
                                style='height: 200px; object-fit: cover;'
                                alt=''
                        />
                        <div class='card-body'>
                            <h5 class='card-title'>{{this.title}}</h5>
                            <h6 class='card-subtitle mb-2 text-muted'>Автор:
                                {{this.user.firstName}}</h6>
                            <h6 class='card-subtitle mb-2 text-muted'>Дата создания:
                                {{this.createdAt}}</h6>
                            <p class='card-text'>{{this.description}}</p>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
        <div class='col-lg-6'>
            <a
                    href='/news/create/view'
                    style='text-decoration: none; text-align: center'
            >
                <div class='card' style='background-color:#d0d0d0;'>
                    <div style='height: 200px; line-height: 200px'>
            <span
                    class='card-img-top'
                    style='white-space: nowrap; overflow: hidden'
            > + </span>
                    </div>
                    <div class='card-body'>
                        <h5 class='card-title'>Добавить новость!</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
{{else}}
    <h1>Список новостей пуст!</h1>
{{/if}}